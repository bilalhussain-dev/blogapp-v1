<div class="container">

<%= render 'shared/errors', obj: @article %>

  <%= form_for @article, local: true, data: { turbo: false } do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class:'form-control', placeholder:'Title' %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class:'form-control', placeholder:'Description', rows:'7' %>
    </div>

    <%= f.submit class:'btn btn-primary btn-lg mt-3' %>

  <% end %>
</div>